<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_navibar_index"
        android:orientation="horizontal"
        android:background="@drawable/title_bottom_line_trans"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nava_9_size">

    <ImageView
            android:src="@drawable/mine_icon"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/nava_0_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/navibar_choose_pos_btn"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_name"
            android:textSize="@dimen/nava_3_size"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="混吃大魔王"/>

        <TextView
                android:id="@+id/user_info"
                android:textSize="@dimen/nava_2_size"
                android:singleLine="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="您总共吃了100顿霸王餐"/>
    </LinearLayout>


    <ImageView
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/nava_0_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/nava_5_size"/>

    <ImageView
            android:layout_gravity="center"
            android:src="@drawable/shoppingcart_normal"
            android:layout_marginLeft="@dimen/nava_0_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/nava_5_size"/>

</LinearLayout>
