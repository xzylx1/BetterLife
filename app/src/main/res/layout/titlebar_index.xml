<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/home_navibar_index"
              android:orientation="horizontal"
              android:background="@drawable/title_bottom_line_trans"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nava_8_size">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/navibar_choose_pos_btn"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

    <TextView
            android:id="@+id/city_now"
            android:textSize="@dimen/nava_3_size"
            android:singleLine="true"
            android:paddingLeft="1dp"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/now_position"/>

        <ImageView
                android:src="@drawable/navibar_get_more"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/nava_0_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="6dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/navibar_search_btn"
            android:background="@drawable/navibar_search_bar_bkg"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="@dimen/nava_5_size"
            android:layout_gravity="center_vertical">

        <ImageView
                android:src="@drawable/navibar_suggest_search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/nava_0_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <TextView
                android:text="搜索商家或地点"
                android:textSize="@dimen/nava_2_size"
                android:gravity="center_vertical"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <ImageView
            android:layout_gravity="center"
            android:id="@+id/navibar_scan_btn"
            android:src="@drawable/navibar_icon_scan"
            android:layout_marginLeft="@dimen/nava_0_size"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/nava_5_size"/>

</LinearLayout>
