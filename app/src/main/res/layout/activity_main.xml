<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/bkg_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.v4.view.ViewPager
                android:id="@+id/fragment_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

        </android.support.v4.view.ViewPager>

        <RadioGroup
                android:id="@+id/tab_radio_group"
                android:background="@drawable/bottom_bg"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RadioButton
                        android:id="@+id/tab_home_radio_btn"
                        android:checked="true"
                        style="@style/radio_button_style_home"
                        android:background="@drawable/main_tab_bkg_selector"
                        android:text="@string/home_btn"/>

                <RadioButton
                        android:id="@+id/tab_tuan_radio_btn"
                        style="@style/radio_button_style_tuan"
                        android:text="@string/tuan_btn"/>

                <RadioButton
                        android:id="@+id/tab_found_radio_btn"
                        style="@style/radio_button_style_found"
                        android:text="@string/found_btn"/>

                <RadioButton
                        android:id="@+id/tab_mine_radio_btn"
                        style="@style/radio_button_style_mine"
                        android:text="@string/mine_btn"/>
        </RadioGroup>

</LinearLayout>
