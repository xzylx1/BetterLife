<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/titlebar_height"
                android:background="@drawable/title_bottom_line">

    <ImageView android:id="@+id/left_btn_title"
                android:src="@drawable/back_btn_common"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>

    <TextView android:id="@+id/titlebar_title" android:text="附近"
              android:textSize="@dimen/nava_5_size"
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <ImageView android:id="@+id/right_btn_title"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/nava_0_size"
               android:layout_centerVertical="true"
               android:src="@drawable/component_search_common"
               android:layout_width="@dimen/nava_7_size"
               android:layout_height="@dimen/nava_7_size"/>

</RelativeLayout>
